#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no
libdir=@libdir@
includedir=@includedir@

version=@major@.@minor@

usage="Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs] [--static-libs]"

if test $# -eq 0; then
      echo $usage 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo "$prefix "
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo "$exec_prefix "
      ;;
    --version)
      echo "$version "
      ;;
    --cflags)
      echo "-I@includedir@ @SDL_CFLAGS@ "
      ;;
    --libs)
      echo "-L@libdir@ -Wl,-rpath,@libdir@ -lSDLU "
      ;;
@STATIC@    --static-libs)
@STATIC@      echo "-L@libdir@ -Wl,-rpath,@libdir@ -lSDLU "
@STATIC@      ;;
    *)
      echo $usage 1>&2
      exit 1
      ;;
  esac
  shift
done

echo
